<div class="row d-flex justify-content-center">
  <div class="col-6">
    <div class="card settings-card p-4">
      <div class="card-body">
        <h4 class="card-title">Settings</h4>
        <form class="settings" method="POST" action="/settings">
          <div class="form-group">
            <label for="username">Username</label>
            <input class="form-control" name="username" value="{{username}}">
            <div class="alert alert-username mt-1"></div>
          </div>
          <div class="form-group">
            <label for="old-password">Old Password</label>
            <input class="form-control" name="old-password" type="password">
            <div class="alert alert-username mt-1"></div>
          </div>
          <div class="form-group">
            <label for="new-password">New Password</label>
            <input class="form-control" name="new-password" type="password">
            <div class="alert alert-username mt-1"></div>
          </div>
          <div class="form-group">
            <label for="new-password-confirm">Confirm New Password</label>
            <input class="form-control" name="new-password-confirm" type="password">
            <div class="alert alert-username mt-1"></div>
          </div>
          <button type="submit" class="btn btn-light">Save</button>
        </form>

        <a class="btn btn-secondary" href="/app" role="button">Go Back</a>
      </div>
    </div>
  </div>
</div>